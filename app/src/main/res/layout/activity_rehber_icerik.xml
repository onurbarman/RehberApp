<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
    android:layout_width="0px"
    android:layout_height="wrap_content"
    android:layout_marginEnd="50dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="50dp"
    android:ems="10"
    app:layout_constraintBottom_toTopOf="@+id/guideline"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/lbl_adSoyad"
    android:text="Onur Barman"
    android:textAlignment="center"
    android:textColor="@color/colorAccent"
    android:textSize="30dp"
    android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="50dp"
        android:ems="10"
        app:layout_constraintBottom_toTopOf="@+id/lbl_aransinMi"
        app:layout_constraintTop_toBottomOf="@+id/lbl_adSoyad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/lbl_telefon"
        android:text="555444333"
        android:textAlignment="center"
        android:textColor="@color/colorYes"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_telefon"
        android:id="@+id/lbl_aransinMi"
        android:text="Aransın Mı?"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_aransinMi">

        <Button
            android:id="@+id/btnEvet"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_style_yes"
            android:text="EVET"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnHayir"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_style_no"
            android:text="HAYIR"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>